<h1 class="LoginTitle" >Welcome to Pupilfirst Caf√©</h1>
<div class="Login" >
  <p class="Login--Title" >
    Login
  </p>
  <div class="Login--FormContainer" >
    <%= form_with url: sessions_path, method: :post, class:"Login--Form" do |form|%>
      <%= form.email_field :email, placeholder: "Email", class:"Login--FormInput" %>
      <%= form.password_field :password, placeholder: "Password", class:"Login--FormInput" %>
      <%= form.button :Login, class:"Button Button__primary" %>
    <% end %>
    <p class="Login--Subtext" >Don't have an account? <%= link_to "Register Here", new_user_path %></p>
  </div>
</div>
